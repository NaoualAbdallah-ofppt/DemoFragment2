<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtTitre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="------"/>
        <Button
            android:id="@+id/btnRecup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="recupere data depuis f2 "></Button>
        <Button
            android:id="@+id/btnSup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="supprimer fragment "></Button>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <fragment
        android:id="@+id/F1"
        android:name="aa.bb.demofragment2.F1Fragment"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        />
    <fragment
        android:id="@+id/F2"
        android:name="aa.bb.demofragment2.F2Fragment"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        />
</LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>